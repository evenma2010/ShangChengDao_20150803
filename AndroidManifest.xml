<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shangchengdao"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/huanying2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 登陆界面 -->
        <activity android:name="com.d1699.activity.LoginActivity"
            android:label="login"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <!-- 注册界面 -->
        <activity android:name="com.d1699.activity.RegisterActivity"
            android:label="register"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <!-- 找回密码界面 -->
        <activity android:name="com.d1699.activity.FindPasswordActivity"
            android:label="find_password"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <!-- 重置密码界面 -->
        <activity android:name="com.d1699.activity.ResetPasswordActivity"
            android:label="reset_password"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        
    </application>

</manifest>
